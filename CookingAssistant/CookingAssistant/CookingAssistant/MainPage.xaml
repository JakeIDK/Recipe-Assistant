<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookingAssistant.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Crimson" Padding="24" CornerRadius="0">
            <Label Text="Recipe Assistant" HorizontalTextAlignment="Center" TextColor="AntiqueWhite" FontSize="38"/>
        </Frame>
        <Button Text= "Create a New Recipe" Clicked="RecipeCreate"/>
        <Button Text= "Saved Recipes" Clicked="RecipeLoad"/>
    </StackLayout>

</ContentPage>
